<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="userinterface.users.UsersController"
            prefWidth="1024" prefHeight="720">

    <VBox spacing="16">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <Label text="GestiÃ³n de Usuarios" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <HBox spacing="8">
