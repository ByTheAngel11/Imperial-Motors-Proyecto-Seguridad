<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="contentArea"
            prefHeight="720"
            prefWidth="1024"
            stylesheets="@/resources/styles/inventory.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="userinterface.users.UsersController">

    <children>
        <VBox spacing="16"
              AnchorPane.topAnchor="16.0"
              AnchorPane.bottomAnchor="16.0"
              AnchorPane.leftAnchor="16.0"
              AnchorPane.rightAnchor="16.0">

            <!-- Título -->
            <Label text="Gestión de Usuarios"
                   styleClass="inv-title"/>

            <!-- Barra de búsqueda + acciones -->
            <HBox spacing="12" styleClass="inv-toolbar">
                <TextField fx:id="txtBuscar"
                           promptText="Buscar por usuario, nombre o correo..."
                           styleClass="inv-search-field"
                           HBox.hgrow="ALWAYS"/>

                <Button fx:id="btnNuevo"
                        text="Nuevo"
                        styleClass="inv-primary-button"/>

                <Button fx:id="btnEditar"
                        text="Editar"
                        styleClass="inv-primary-button"/>

                <Button fx:id="btnEliminar"
                        text="Eliminar"
                        styleClass="inv-primary-button"/>
            </HBox>

            <!-- Card de tabla -->
            <VBox styleClass="inv-table-card" VBox.vgrow="ALWAYS">
                <TableView fx:id="tblUsuarios" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colUsername" text="Usuario"/>
                        <TableColumn fx:id="colFullName" text="Nombre completo"/>
                        <TableColumn fx:id="colEmail" text="Correo"/>
                        <TableColumn fx:id="colRole" text="Rol"/>
                        <TableColumn fx:id="colActivo" text="Activo"/>
                        <TableColumn fx:id="colCreated" text="Creado"/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </children>
</AnchorPane>
