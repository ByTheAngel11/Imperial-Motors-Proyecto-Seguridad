<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="userinterface.vehicle.AddVehicleController"
            prefWidth="1366" prefHeight="768"
            stylesheets="@/resources/styles/vehicle.css">

    <children>
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                   AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <children>
                <VBox spacing="24" alignment="TOP_CENTER">
                    <children>

                        <!-- Card -->
                        <VBox spacing="24"
                              prefWidth="1150"
                              styleClass="add-vehicle-card">

                            <children>

                                <!-- Header -->
                                <Label text="Agregar Nuevo Vehículo"
                                       styleClass="add-vehicle-title"/>

                                <!-- Form grid -->
                                <GridPane hgap="40" vgap="18">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="50"/>
                                        <ColumnConstraints percentWidth="50"/>
                                    </columnConstraints>

                                    <children>
                                        <!-- Marca -->
                                        <VBox spacing="6" GridPane.rowIndex="0" GridPane.columnIndex="0">
                                            <children>
                                                <Label text="Marca *"
                                                       styleClass="form-label"/>
                                                <TextField fx:id="txtMake"
                                                           promptText="ej. Honda"
                                                           styleClass="form-field"/>
                                            </children>
                                        </VBox>

                                        <!-- Modelo -->
                                        <VBox spacing="6" GridPane.rowIndex="0" GridPane.columnIndex="1">
                                            <children>
                                                <Label text="Modelo *"
                                                       styleClass="form-label"/>
                                                <TextField fx:id="txtModel"
                                                           promptText="ej. Civic"
                                                           styleClass="form-field"/>
                                            </children>
                                        </VBox>

                                        <!-- Año -->
                                        <VBox spacing="6" GridPane.rowIndex="1" GridPane.columnIndex="0">
                                            <children>
                                                <Label text="Año *"
                                                       styleClass="form-label"/>
                                                <TextField fx:id="txtYear"
                                                           promptText="2025"
                                                           styleClass="form-field"/>
                                            </children>
                                        </VBox>

                                        <!-- Color -->
                                        <VBox spacing="6" GridPane.rowIndex="1" GridPane.columnIndex="1">
                                            <children>
                                                <Label text="Color *"
                                                       styleClass="form-label"/>
                                                <TextField fx:id="txtColor"
                                                           promptText="ej. Blanco"
                                                           styleClass="form-field"/>
                                            </children>
                                        </VBox>

                                        <!-- VIN -->
                                        <VBox spacing="6" GridPane.rowIndex="2" GridPane.columnIndex="0">
                                            <children>
                                                <Label text="VIN *"
                                                       styleClass="form-label"/>
                                                <TextField fx:id="txtVin"
                                                           promptText="ej. HND2024CIV001"
                                                           styleClass="form-field"/>
                                            </children>
                                        </VBox>

                                        <!-- Kilometraje -->
                                        <VBox spacing="6" GridPane.rowIndex="2" GridPane.columnIndex="1">
                                            <children>
                                                <Label text="Kilometraje"
                                                       styleClass="form-label"/>
                                                <TextField fx:id="txtMileage"
                                                           promptText="0"
                                                           styleClass="form-field"/>
                                            </children>
                                        </VBox>

                                        <!-- Precio -->
                                        <VBox spacing="6" GridPane.rowIndex="3" GridPane.columnIndex="0">
                                            <children>
                                                <Label text="Precio *"
                                                       styleClass="form-label"/>
                                                <TextField fx:id="txtPrice"
                                                           promptText="0"
                                                           styleClass="form-field"/>
                                            </children>
                                        </VBox>

                                        <!-- Estado -->
                                        <VBox spacing="6" GridPane.rowIndex="3" GridPane.columnIndex="1">
                                            <children>
                                                <Label text="Estado"
                                                       styleClass="form-label"/>
                                                <ComboBox fx:id="cmbStatus"
                                                          promptText="Disponible"
                                                          styleClass="form-field"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </GridPane>

                                <!-- Divider -->
                                <Separator/>

                                <!-- Buttons -->
                                <HBox spacing="12" alignment="CENTER_RIGHT">
                                    <children>
                                        <Region HBox.hgrow="ALWAYS"/>

                                        <Button fx:id="btnCancel"
                                                text="Cancelar"
                                                mnemonicParsing="false"
                                                onAction="#onCancelClicked"
                                                styleClass="btn-secondary"/>

                                        <Button fx:id="btnSave"
                                                text="Guardar"
                                                mnemonicParsing="false"
                                                defaultButton="true"
                                                onAction="#onSaveClicked"
                                                styleClass="btn-primary"/>
                                    </children>
                                </HBox>

                            </children>
                        </VBox>

                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>
