<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="RootPane"
            fx:controller="userinterface.purchase.PurchaseFormController"
            stylesheets="@/resources/styles/vehicle.css">

    <children>
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                   AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

            <children>
                <VBox spacing="24" alignment="TOP_CENTER">

                    <children>

                        <VBox spacing="24"
                              prefWidth="1150"
                              styleClass="add-vehicle-card">

                            <children>

                                <Label fx:id="LblTitle"
                                       text="Registrar compra"
                                       styleClass="add-vehicle-title"/>

                                <!-- ==========================
                                     Sección: Datos del vehículo
                                     ========================== -->
                                <Label text="Datos del vehículo"
                                       styleClass="form-section-title"/>

                                <GridPane hgap="40" vgap="18">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="50"/>
                                        <ColumnConstraints percentWidth="50"/>
                                    </columnConstraints>

                                    <!-- Marca -->
                                    <VBox spacing="6"
                                          GridPane.rowIndex="0" GridPane.columnIndex="0">
                                        <children>
                                            <Label text="Marca *"
                                                   styleClass="form-label"/>
                                            <TextField fx:id="TxtMake"
                                                       styleClass="form-field"
                                                       promptText="Ej. Toyota"/>
                                        </children>
                                    </VBox>

                                    <!-- Modelo -->
                                    <VBox spacing="6"
                                          GridPane.rowIndex="0" GridPane.columnIndex="1">
                                        <children>
                                            <Label text="Modelo *"
                                                   styleClass="form-label"/>
                                            <TextField fx:id="TxtModel"
                                                       styleClass="form-field"
                                                       promptText="Ej. Corolla"/>
                                        </children>
                                    </VBox>

                                    <!-- Año -->
                                    <VBox spacing="6"
                                          GridPane.rowIndex="1" GridPane.columnIndex="0">
                                        <children>
                                            <Label text="Año *"
                                                   styleClass="form-label"/>
                                            <TextField fx:id="TxtYear"
                                                       styleClass="form-field"
                                                       promptText="Ej. 2020"/>
                                        </children>
                                    </VBox>

                                    <!-- VIN -->
                                    <VBox spacing="6"
                                          GridPane.rowIndex="1" GridPane.columnIndex="1">
                                        <children>
                                            <Label text="VIN *"
                                                   styleClass="form-label"/>
                                            <TextField fx:id="TxtVin"
                                                       styleClass="form-field"
                                                       promptText="Número VIN"/>
                                        </children>
                                    </VBox>

                                    <!-- Color -->
                                    <VBox spacing="6"
                                          GridPane.rowIndex="2" GridPane.columnIndex="0"
                                          GridPane.columnSpan="2">
                                        <children>
                                            <Label text="Color *"
                                                   styleClass="form-label"/>
                                            <TextField fx:id="TxtColor"
                                                       styleClass="form-field"
                                                       promptText="Ej. Rojo"/>
                                        </children>
                                    </VBox>

                                </GridPane>

                                <Separator/>

                                <!-- ==========================
                                     Sección: Datos de la compra
                                     ========================== -->
                                <Label text="Datos de la compra"
                                       styleClass="form-section-title"/>

                                <GridPane hgap="40" vgap="18">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="50"/>
                                        <ColumnConstraints percentWidth="50"/>
                                    </columnConstraints>

                                    <!-- ID proveedor -->
                                    <VBox spacing="6"
                                          GridPane.rowIndex="0" GridPane.columnIndex="0">
                                        <children>
                                            <Label text="ID proveedor *"
                                                   styleClass="form-label"/>
                                            <TextField fx:id="TxtSupplierId"
                                                       styleClass="form-field"
                                                       promptText="ID del proveedor"/>
                                        </children>
                                    </VBox>

                                    <!-- Precio acordado -->
                                    <VBox spacing="6"
                                          GridPane.rowIndex="0" GridPane.columnIndex="1">
                                        <children>
                                            <Label text="Precio acordado *"
                                                   styleClass="form-label"/>
                                            <TextField fx:id="TxtAgreedPrice"
                                                       styleClass="form-field"
                                                       promptText="0.00"/>
                                        </children>
                                    </VBox>

                                    <!-- Fecha esperada -->
                                    <VBox spacing="6"
                                          GridPane.rowIndex="1" GridPane.columnIndex="0">
                                        <children>
                                            <Label text="Fecha esperada"
                                                   styleClass="form-label"/>
                                            <DatePicker fx:id="DpExpectedDate"
                                                        promptText="YYYY-MM-DD"
                                                        styleClass="form-field"/>
                                        </children>
                                    </VBox>

                                </GridPane>

                                <Separator/>

                                <HBox spacing="12" alignment="CENTER_RIGHT">
                                    <Region HBox.hgrow="ALWAYS"/>

                                    <Button fx:id="BtnCancel"
                                            text="Cancelar compra"
                                            onAction="#onCancel"
                                            styleClass="btn-secondary"/>

                                    <Button fx:id="BtnSave"
                                            text="Guardar compra"
                                            onAction="#onSave"
                                            styleClass="btn-primary"/>
                                </HBox>

                            </children>
                        </VBox>

                    </children>
                </VBox>

            </children>
        </StackPane>

    </children>
</AnchorPane>
