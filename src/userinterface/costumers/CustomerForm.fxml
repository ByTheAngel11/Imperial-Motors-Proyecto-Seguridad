<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="userinterface.costumers.CustomerFormController"
            prefWidth="1366" prefHeight="768"
            stylesheets="@/resources/styles/vehicle.css">

    <children>
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                   AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <children>
                <VBox spacing="24" alignment="TOP_CENTER">
                    <children>

                        <!-- Card -->
                        <VBox spacing="24"
                              prefWidth="1150"
                              styleClass="add-vehicle-card">

                            <children>

                                <!-- Header -->
                                <Label fx:id="LblTitle"
                                       text="Registrar Cliente"
                                       styleClass="add-vehicle-title"/>

                                <!-- Form grid -->
                                <GridPane hgap="40" vgap="18">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="50"/>
                                        <ColumnConstraints percentWidth="50"/>
                                    </columnConstraints>

                                    <children>
                                        <!-- No. cliente -->
                                        <VBox spacing="6"
                                              GridPane.rowIndex="0"
                                              GridPane.columnIndex="0">
                                            <children>
                                                <Label text="No. cliente"
                                                       styleClass="form-label"/>
                                                <TextField fx:id="TxtCustomerNumber"
                                                           promptText="Se generará automáticamente"
                                                           editable="false"
                                                           focusTraversable="false"
                                                           styleClass="form-field"/>
                                            </children>
                                        </VBox>

                                        <!-- Nombre completo -->
                                        <VBox spacing="6"
                                              GridPane.rowIndex="0"
                                              GridPane.columnIndex="1">
                                            <children>
                                                <Label text="Nombre completo *"
                                                       styleClass="form-label"/>
                                                <TextField fx:id="TxtFullName"
                                                           promptText="Nombre y apellidos"
                                                           styleClass="form-field"/>
                                            </children>
                                        </VBox>

                                        <!-- Correo electrónico -->
                                        <VBox spacing="6"
                                              GridPane.rowIndex="1"
                                              GridPane.columnIndex="0">
                                            <children>
                                                <Label text="Correo electrónico *"
                                                       styleClass="form-label"/>
                                                <TextField fx:id="TxtEmail"
                                                           promptText="cliente@correo.com"
                                                           styleClass="form-field"/>
                                            </children>
                                        </VBox>

                                        <!-- Teléfono -->
                                        <VBox spacing="6"
                                              GridPane.rowIndex="1"
                                              GridPane.columnIndex="1">
                                            <children>
                                                <Label text="Teléfono *"
                                                       styleClass="form-label"/>
                                                <TextField fx:id="TxtPhone"
                                                           promptText="Teléfono"
                                                           styleClass="form-field"/>
                                            </children>
                                        </VBox>

                                        <!-- Estado -->
                                        <VBox spacing="6"
                                              GridPane.rowIndex="2"
                                              GridPane.columnIndex="0">
                                            <children>
                                                <Label text="Estado"
                                                       styleClass="form-label"/>
                                                <CheckBox fx:id="ChkActive"
                                                          text="Cliente activo"/>
                                            </children>
                                        </VBox>
                                    </children>
                                </GridPane>

                                <!-- Divider -->
                                <Separator/>

                                <!-- Buttons -->
                                <HBox spacing="12" alignment="CENTER_RIGHT">
                                    <children>
                                        <Region HBox.hgrow="ALWAYS"/>

                                        <Button fx:id="btnCancel"
                                                text="Cancelar"
                                                mnemonicParsing="false"
                                                onAction="#onCancel"
                                                styleClass="btn-secondary"/>

                                        <Button fx:id="btnSave"
                                                text="Guardar"
                                                mnemonicParsing="false"
                                                defaultButton="true"
                                                onAction="#onSave"
                                                styleClass="btn-primary"/>
                                    </children>
                                </HBox>

                            </children>
                        </VBox>

                    </children>
                </VBox>
            </children>
        </StackPane>
    </children>
</AnchorPane>
