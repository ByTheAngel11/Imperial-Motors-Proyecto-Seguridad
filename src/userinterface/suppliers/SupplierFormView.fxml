<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="RootPane"
            fx:controller="userinterface.suppliers.SupplierFormController"
            stylesheets="@/resources/styles/vehicle.css">

    <children>
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                   AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

            <children>
                <VBox spacing="24" alignment="TOP_CENTER">

                    <children>

                        <VBox spacing="24"
                              prefWidth="1150"
                              styleClass="add-vehicle-card">

                            <children>

                                <Label fx:id="LblTitle"
                                       text="Registrar proveedor"
                                       styleClass="add-vehicle-title"/>

                                <GridPane hgap="40" vgap="18">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="50"/>
                                        <ColumnConstraints percentWidth="50"/>
                                    </columnConstraints>

                                    <!-- ID proveedor -->
                                    <VBox spacing="6"
                                          GridPane.rowIndex="0" GridPane.columnIndex="0">
                                        <children>
                                            <Label text="ID proveedor" styleClass="form-label"/>
                                            <TextField fx:id="TxtSupplierId"
                                                       styleClass="form-field form-field-disabled"
                                                       editable="false"
                                                       promptText="Autogenerado"/>
                                        </children>
                                    </VBox>

                                    <!-- Razón social -->
                                    <VBox spacing="6"
                                          GridPane.rowIndex="0" GridPane.columnIndex="1">
                                        <children>
                                            <Label text="Razón social *" styleClass="form-label"/>
                                            <TextField fx:id="TxtLegalName"
                                                       styleClass="form-field"
                                                       promptText="Nombre o razón social"/>
                                        </children>
                                    </VBox>

                                    <!-- RFC -->
                                    <VBox spacing="6"
                                          GridPane.rowIndex="1" GridPane.columnIndex="0">
                                        <children>
                                            <Label text="RFC" styleClass="form-label"/>
                                            <TextField fx:id="TxtRfc"
                                                       styleClass="form-field"
                                                       promptText="RFC (opcional)"/>
                                        </children>
                                    </VBox>

                                    <!-- Contacto -->
                                    <VBox spacing="6"
                                          GridPane.rowIndex="1" GridPane.columnIndex="1">
                                        <children>
                                            <Label text="Nombre contacto *" styleClass="form-label"/>
                                            <TextField fx:id="TxtContactName"
                                                       styleClass="form-field"
                                                       promptText="Persona de contacto"/>
                                        </children>
                                    </VBox>

                                    <!-- Teléfono -->
                                    <VBox spacing="6"
                                          GridPane.rowIndex="2" GridPane.columnIndex="0">
                                        <children>
                                            <Label text="Teléfono *" styleClass="form-label"/>
                                            <TextField fx:id="TxtPhone"
                                                       styleClass="form-field"
                                                       promptText="Teléfono de contacto"/>
                                        </children>
                                    </VBox>

                                    <!-- Email -->
                                    <VBox spacing="6"
                                          GridPane.rowIndex="2" GridPane.columnIndex="1">
                                        <children>
                                            <Label text="Email" styleClass="form-label"/>
                                            <TextField fx:id="TxtEmail"
                                                       styleClass="form-field"
                                                       promptText="correo@ejemplo.com"/>
                                        </children>
                                    </VBox>

                                    <!-- Estado -->
                                    <VBox spacing="6"
                                          GridPane.rowIndex="3" GridPane.columnIndex="0">
                                        <children>
                                            <Label text="Estado" styleClass="form-label"/>
                                            <TextField fx:id="TxtStatus"
                                                       styleClass="form-field form-field-disabled"
                                                       editable="false"
                                                       promptText="Activo/Inactivo"/>
                                        </children>
                                    </VBox>

                                </GridPane>

                                <Separator/>

                                <HBox spacing="12" alignment="CENTER_RIGHT">
                                    <Region HBox.hgrow="ALWAYS"/>
                                    <Button fx:id="BtnCancel" text="Cancelar"
                                            onAction="#onCancel"
                                            styleClass="btn-secondary"/>
                                    <Button fx:id="BtnSave" text="Guardar"
                                            onAction="#onSave"
                                            styleClass="btn-primary"/>
                                </HBox>

                            </children>
                        </VBox>

                    </children>
                </VBox>

            </children>
        </StackPane>

    </children>
</AnchorPane>
