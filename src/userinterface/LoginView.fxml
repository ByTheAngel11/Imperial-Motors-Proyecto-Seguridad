<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            prefWidth="1280" prefHeight="800"
            stylesheets="@/resources/styles/login.css">

    <!-- Fondo -->
    <ImageView fitWidth="1280" fitHeight="800" preserveRatio="false">
        <image>
            <Image url="@/resources/images/bg-cars.png" />
        </image>
    </ImageView>

    <!-- Oscurecedor -->
    <Rectangle width="1280" height="800" fill="#000000" opacity="0.45"/>

    <!-- Contenedor centrado -->
    <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">

        <!-- Tarjeta -->
        <VBox spacing="18" alignment="TOP_CENTER" maxWidth="520" styleClass="card">
            <padding><Insets top="24" right="28" bottom="28" left="28"/></padding>

            <!-- Logo + badge rojo -->
            <StackPane prefWidth="64" prefHeight="64">
                <Circle radius="22" fill="#0F172A"/>
                <Label text="IM" textFill="WHITE">
                    <font><Font name="Poppins SemiBold" size="18"/></font>
                </Label>
                <Circle radius="5" fill="#EF4444" StackPane.alignment="TOP_RIGHT">
                    <StackPane.margin><Insets top="-2" right="-2"/></StackPane.margin>
                </Circle>
            </StackPane>

            <!-- Títulos -->
            <VBox spacing="6" alignment="CENTER">
                <Label text="Imperial Motors" styleClass="title"/>
                <Label text="Ingresa tus credenciales para continuar" styleClass="subtitle"/>
            </VBox>

            <!-- Form -->
            <VBox spacing="12" prefWidth="440">
                <!-- Email -->
                <VBox spacing="6">
                    <Label text="Correo electrónico"/>
                    <TextField fx:id="txtEmail" promptText="tu@email.com"/>
                </VBox>

                <!-- Password -->
                <VBox spacing="6">
                    <Label text="Contraseña"/>
                    <PasswordField fx:id="txtPassword" promptText="••••••••"/>
                </VBox>

                <!-- Botón -->
                <Button fx:id="btnLogin" text="Iniciar sesión" prefHeight="44" styleClass="primary"/>
            </VBox>

            <!-- Enlace olvidar -->
            <Hyperlink fx:id="lnkForgot" text="¿Olvidaste tu contraseña?"/>

            <!-- Divider -->
            <HBox alignment="CENTER" spacing="10" prefWidth="440">
                <Separator prefWidth="160"/>
                <Label text=" "/>
                <Separator prefWidth="160"/>
            </HBox>

            <!-- Credenciales de prueba -->
            <VBox spacing="4" alignment="CENTER">
                <Label text="Credenciales de prueba:" styleClass="small"/>
                <Label text="Admin: admin@imperialmotors.com  /  admin123" styleClass="muted"/>
                <Label text="Vendedor: vendedor@imperialmotors.com  /  vendedor123" styleClass="muted"/>
            </VBox>
        </VBox>
    </StackPane>
</AnchorPane>
